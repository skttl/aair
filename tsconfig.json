{
	"extends": "@tsconfig/node16/tsconfig.json",
	"files": [
		"src/cli.ts"
	],
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"noImplicitAny": false,
		"typeRoots": [
			"./node_modules/@types",
			"./types/"
		]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
